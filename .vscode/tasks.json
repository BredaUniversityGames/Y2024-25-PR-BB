{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "shell",
            "label": "Configure Debug",
            "command": "cmake --preset x64-Debug",
        },
        {
            "type": "shell",
            "label": "Configure Release",
            "command": "cmake --preset x64-Distribution",
        },
        {
            "type": "shell",
            "label": "Configure Profiling",
            "command": "cmake --preset x64-RelWithDebInfo",
        },
        {
            "type": "shell",
            "label": "Build Debug",
            "command": "cmake --build build/x64-Debug",
        },
        {
            "type": "shell",
            "label": "Build Release",
            "command": "cmake --build build/x64-Distribution",
        },
        {
            "type": "shell",
            "label": "Build Profiling",
            "command": "cmake --build build/x64-RelWithDebInfo",
        }
    ]
}