{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 1
  },
  "configurePresets": [
    {
      "name": "x64",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {

        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/W4 /EHs /GR",

        "CMAKE_CXX_FLAGS_DEBUG": "/Od /Zi",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /DNDEBUG",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "/O2 /Zo /DNDEBUG"

      }
    },
    {
      "name": "WSL",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {

        "CMAKE_CXX_COMPILER": "/usr/bin/g++",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_FLAGS": "-fexceptions -frtti -Wall",

        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -g",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG",
        "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-02 -g -DNDEBUG"
      }
    },
    {
      "name": "x64-Debug",
      "inherits": "x64",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "x64-Release",
      "inherits": "x64",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "x64-RelWithDebInfo",
      "inherits": "x64",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    },
    {
      "name": "WSL-Debug",
      "inherits": "WSL",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "WSL-Release",
      "inherits": "WSL",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "WSL-RelWithDebInfo",
      "inherits": "WSL",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-Debug",
      "configurePreset": "x64-Debug",
      "configuration": "Debug",
      "targets": [ "all" ]
    },
    {
      "name": "x64-Release",
      "configurePreset": "x64-Release",
      "configuration": "Release",
      "targets": [ "all" ]
    },
    {
      "name": "x64-RelWithDebInfo",
      "configurePreset": "x64-RelWithDebInfo",
      "configuration": "RelWithDebInfo",
      "targets": [ "all" ]
    },
    {
      "name": "WSL-Debug",
      "configurePreset": "WSL-Debug",
      "configuration": "Debug",
      "targets": [ "all" ]
    },
    {
      "name": "WSL-Release",
      "configurePreset": "WSL-Release",
      "configuration": "Release",
      "targets": [ "all" ]
    },
    {
      "name": "WSL-RelWithDebInfo",
      "configurePreset": "WSL-RelWithDebInfo",
      "configuration": "RelWithDebInfo",
      "targets": [ "all" ]
    }
  ],
  "testPresets": []
}